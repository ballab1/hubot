[supervisord]
nodaemon=true

[program:hubot]
command=/usr/local/hubot/bin/hubot --adapter slack
stdout_logfile=/dev/fd/1
stdout_logfile_maxbytes=0
redirect_stderr=true
autorestart=true

[program:redis]
command=redis-server /usr/local/hubot/redis/redis.conf
stdout_logfile=/var/log/supervisor_%(program_name)s.log
stderr_logfile=/var/log/supervisor_%(program_name)s.log
autorestart=true
