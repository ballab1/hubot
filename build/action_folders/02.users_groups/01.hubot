#!/bin/bash

declare -A hubot=(
    ['user']=${HUBOT_USER:-hubot}
    ['uid']=${HUBOT_UID:-$(getent passwd hubot | cut -d: -f3)}
    ['group']=${HUBOT_GROUP:-hubot}
    ['gid']=${HUBOT_GID:-$(getent group hubot| cut -d: -f3)}
    ['shell']=/sbin/nologin
    ['home']="${HUBOT_HOME:-/usr/local/hubot}"
)
: ${hubot['uid']:=2223}
: ${hubot['gid']:=2223}
